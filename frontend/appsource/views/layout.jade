doctype html
html(lang="en")
	head
		block title
			title = Welcome!
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		link(href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.css", rel="stylesheet")
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css", rel="stylesheet")
		link(href="/stylesheets/home.css", rel="stylesheet")
		link(href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css", rel="stylesheet")
		link(href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.2/css/bootstrap3/bootstrap-switch.min.css", rel="stylesheet")
		link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css", rel="stylesheet")
		link(href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-social/4.10.1/bootstrap-social.min.css", rel="stylesheet")
		script(src="https://code.jquery.com/jquery-2.1.4.min.js")
		script(src="/javascripts/home.js")
		script(src="http://fgnass.github.io/spin.js/spin.min.js")
		script(src="http://kjur.github.io/jsrsasign/jsrsasign-latest-all-min.js")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.pack.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.2/js/bootstrap-switch.min.js")		
	body
		div.container
			nav.navbar.navbar-default.navbar-custom.navbar-fixed-top
				div.container
					div.navbar-header
						button.navbar-toggle.collapsed(data-toggle="collapse",data-target="#navbar",aria-expanded="false",aria-controls="navbar")
							span.sr-only
								| Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href="/home")
							| SmartReader
					div#navbar.navbar-collapse.collapse
						ul.nav.navbar-nav
							li.active
								button#btn-home.btn.btn-default.btn-sm.navbar-btn
									span.glyphicon.glyphicon-home
									|   Home
							li
								button.btn.btn-default.btn-sm.navbar-btn
									span.glyphicon.glyphicon-option-horizontal
									|   About
							li
								button.btn.btn-default.btn-sm.navbar-btn
									span.glyphicon.glyphicon-phone-alt
									|   Contact
							li
								button.btn.btn-success.btn-sm.navbar-btn
									span.glyphicon.glyphicon-download-alt
									|  Chrome Extension
						ul.nav.navbar-nav.navbar-right
							if user
								li
									p.navbar-text
										| #{user.name}
								li
									button#btn-login.btn.btn-default.btn-sm.navbar-btn
										|   Logout
							else
								li
									button#btn-login.btn.btn-default.btn-sm.navbar-btn
										span.glyphicon.glyphicon-user
										|   Login
								li
									button#btn-register.btn.btn-default.btn-sm.navbar-btn
										span.glyphicon.glyphicons-plus
											| +
										|   Register

		div.content
			block content
			div.hidden
				div#login
					div.panel.panel-primary
						div.panel-heading
							span.glyphicon.glyphicon-user
							b  Login
						div.panel-body
							form.form-horizontal
								div.form-group
									label.col-sm-2.control-label(for="input-email")
										| Email
									div.col-sm-10
										input#input-email.form-control(type="email",placeholder="Email")
								div.form-group
									label.col-sm-2.control-label(for="input-password")
										| Password
									div.col-sm-10
										input#input-password.form-control(type="password",placeholder="Password")
								div.form-group
									div.col-sm-offset-2.col-sm-10
										div.checkbox
											label
												input(type="checkbox")
												| Remember me
								div.form-group
									div.col-sm-offset-2.col-sm-10
										button.btn.btn-default(type="submit")
											| Sign in
						div.panel-footer
							a.btn.btn-sm.btn-default.btn-social.btn-facebook.login-btn
								i.fa.fa-facebook
								| Sign in with Facebook
							a#btn-login-twitter.btn.btn-sm.btn-default.btn-social.btn-twitter.login-btn
								i.fa.fa-twitter
								| Sign in with Twitter
							a.btn.btn-sm.btn-default.btn-social.btn-google.login-btn
								i.fa.fa-google
								| Sign in with Google
				div#register
					div.panel.panel-primary
						div.panel-heading
							span.glyphicon.glyphicons-plus
								| +
							b  Register
						div.panel-body
							form.form-horizontal
								div.form-group
									label.col-sm-2.control-label(for="input-fname")
										| First Name
									div.col-sm-10
										input#input-fname.form-control(type="text",placeholder="First Name")
								div.form-group
									label.col-sm-2.control-label(for="input-lname")
										| Last Name
									div.col-sm-10
										input#input-lname.form-control(type="text",placeholder="Last Name")
								div.form-group
									label.col-sm-2.control-label(for="input-email")
										| Email
									div.col-sm-10
										input#input-email.form-control(type="email",placeholder="Email")
								div.form-group
									label.col-sm-2.control-label(for="input-password")
										| Password
									div.col-sm-10
										input#input-password.form-control(type="password",placeholder="Password")
								div.form-group
									div.col-sm-offset-2.col-sm-10
										button.btn.btn-default(type="submit")
											| Register
		footer
			div.container
				p.small
					| Designed and developed by:
				a(href="https://www.linkedin.com/pub/sunny-singh/3b/565/a5",style="text-decoration:none;")
					span(style="font: 90% Arial,sans-serif; color:#0783B6;")
						img(src="https://static.licdn.com/scds/common/u/img/webpromo/btn_in_20x15.png" width="20" height="15" alt="View Sunny Singh's LinkedIn profile" style="vertical-align:middle;" border="0")
						| &nbsp;Sunny Singh
